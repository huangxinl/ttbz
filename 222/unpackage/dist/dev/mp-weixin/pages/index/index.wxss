.box {
	position: relative;
	margin: 50rpx auto;
	border: 1px solid #888888;
	width: 300rpx;
	height: 200rpx;
	padding: 10rpx;
	text-align: center;
}
.edit {
	font-size: 24rpx;
}
.tip {
	font-size: 28rpx;
	color: #000;
	font-weight: bold;
	float: left;
}
.text {
	font-size: 20rpx;
	padding: 20rpx;
}
.boll {
	display: inline-block;
	text-align: center;
	line-height: 50rpx;
	width: 50rpx;
	height: 50rpx;
	margin-bottom: 10rpx;
	margin-left: 40rpx;
	border: 1px solid #888888;
	/* background: #888888; */
	color: #000000;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	font-size: 20rpx;
}
.text-color {
	-webkit-box-flex: 0;
	-webkit-flex: 0 0 150rpx;
	    -ms-flex: 0 0 150rpx;
	        flex: 0 0 150rpx;
	font-size: 20rpx;
	padding: 20rpx;
}
.container {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.cont {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.cu-tag:nth-child(1) {
	margin-left: 10rpx;
}
.cu-tag {
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	margin: 0 20rpx 20rpx;
}
.txt-input {
	width: 50%;
	position: absolute;
	top: 40rpx;
	left: 80rpx;
	padding: 10rpx;
	-webkit-border-radius: 15rpx;
	        border-radius: 15rpx;
	border: 1px solid #007AFF;
	color: #ffff;
}
.txt {
	position: absolute;
	padding: 10rpx;
	color: #ffff
}


